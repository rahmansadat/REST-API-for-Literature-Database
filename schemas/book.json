{
  "schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "book": {
      "id": "/book",
      "title": "Book",
      "description": "Data to create a new book",
      "type": "object",
      "properties": {
        "title": {
          "description": "Title of the book",
          "type": "string"
        },
        "summary": {
          "description": "Short summary of the book",
          "type": "string"
        },
        "isbn": {
          "description": "ISBN code of the book",
          "type": "string"
        },
        "imageURL": {
          "description": "URL for book cover",
          "type": "string",
          "format": "uri"
        },
        "authorID": {
          "description": "ID of the book's author",
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["title", "authorID"],
      "additionalProperties": false
    }, 

    "bookUpdate": {
      "id": "/bookUpdate",
      "title": "Book Update",
      "description": "Data to update an existing book.",
      "type": "object",
      "properties": {
        "title": {
          "description": "Title of the book",
          "type": "string"
        },
        "summary": {
          "description": "Short summary of the book",
          "type": "string"
        },
        "isbn": {
          "description": "ISBN code of the book",
          "type": "string"
        },
        "imageURL": {
          "description": "URL for book cover",
          "type": "string",
          "format": "uri"
        },
        "authorID": {
          "description": "ID of the book's author",
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }, 

    "bookCreated": {
      "id": "/bookCreated",
      "title": "Book Created",
      "description": "Confirmation of a successful book creation",
      "type": "object",
      "properties": {
        "ID": {
          "description": "ID of the created book",
          "type": "integer"
        },
        "created": {
          "description": "Boolean value indicating success",
          "type": "boolean"
        }
      }
    }, 

    "bookUpdated": {
      "id": "/bookUpdated",
      "title": "Book Updated",
      "description": "Confirmation of a successful book update",
      "type": "object",
      "properties": {
        "ID": {
          "description": "ID of the updated book",
          "type": "integer"
        },
        "updated": {
          "description": "Boolean value indicating success",
          "type": "boolean"
        }
      }
    }, 

    "bookDeleted": {
      "id": "/bookDeleted",
      "title": "Book Deleted",
      "description": "Confirmation of a successful book deletion",
      "type": "object",
      "properties": {
        "ID": {
          "description": "ID of the deleted book",
          "type": "integer"
        },
        "deleted": {
          "description": "Boolean value indicating success",
          "type": "boolean"
        }
      }
    }, 

    "bookGet": {
      "id": "/bookGet",
      "title": "Book Get",
      "description": "Book data on the response body",
      "type": "object",
      "properties": {
        "ID": {
          "description": "ID of the book",
          "type": "integer",
          "minimum": 0
        },
        "title": {
          "description": "Title of the book",
          "type": "string"
        },
        "summary": {
          "description": "Short summary of the book",
          "type": "string"
        },
        "datePublished": {
          "description": "Date the book was published",
          "type": "string",
          "format": "date"
        },
        "isbn": {
          "description": "ISBN code of the book",
          "type": "string"
        },
        "imageURL": {
          "description": "URL for book cover",
          "type": "string",
          "format": "uri"
        },
        "authorID": {
          "description": "ID of the book's author",
          "type": "integer",
          "minimum": 0
        }
      }
    },

    "bookGetAll": {
      "id": "/bookGetAll",
      "title": "Book Get All",
      "description": "All books data on the response body",
      "type": "array",
      "items": {"$ref": "#/definitions/bookGet"}
    }, 

    "getFirstSentence": {
      "id": "/getFirstSentence",
      "title": " Get First Sentence",
      "description": "First sentence of a book on the response body",
      "type": "object",
      "properties": {
        "bookID": {
          "description": "ID of the book",
          "type": "integer",
          "minimum": 0
        },
        "bookTitle": {
          "description": "Title of the book",
          "type": "string"
        }, 
        "firstSentence": {
          "description": "First sentence of the book",
          "type": "string"
        }
      }
    }, 

    "getPageCount": {
      "id": "/getPageCount",
      "title": " Get Page Count",
      "description": "Page count of a book on the response body",
      "type": "object",
      "properties": {
        "bookID": {
          "description": "ID of the book",
          "type": "integer",
          "minimum": 0
        },
        "bookTitle": {
          "description": "Title of the book",
          "type": "string"
        }, 
        "pageCount": {
          "description": "Page count of the book",
          "type": "integer"
        }
      }
    }
  }
}