{
    "schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "author": {
            "id": "/author",
            "title": "Author",
            "description": "Data to create a new author",
            "type": "object",
            "properties": {
                "fullName": {
                    "description": "First and last name of the author",
                    "type": "string"
                },
                "about": {
                    "description": "Short introduction to the author and their works.",
                    "type": "string"
                },
                "imageURL": {
                    "description": "URL for author's photo",
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": ["fullName"],
            "additionalProperties": false
        },
        
        "authorUpdate": {
            "id": "/author",
            "title": "Author",
            "description": "Data to create a new author",
            "type": "object",
            "properties": {
                "fullName": {
                    "description": "First and last name of the author",
                    "type": "string"
                },
                "about": {
                    "description": "Short introduction to the author and their works.",
                    "type": "string"
                },
                "imageURL": {
                    "description": "URL for author's photo",
                    "type": "string",
                    "format": "uri"
                }
            },
            "additionalProperties": false
        }, 

        "authorCreated": {
            "id": "/authorCreated",
            "title": "Author Created",
            "description": "Confirmation of a successful author creation",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the created author",
                    "type": "integer"
                },
                "created": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "authorUpdated": {
            "id": "/authorUpdated",
            "title": "Author Updated",
            "description": "Confirmation of a successful author update",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the updated author",
                    "type": "integer"
                },
                "updated": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "authorDeleted": {
            "id": "/authorDeleted",
            "title": "Author Deleted",
            "description": "Confirmation of a successful author deletion",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the deleted author",
                    "type": "integer"
                },
                "deleted": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "authorGet": {
            "id": "/authorGet",
            "title": "Author Get",
            "description": "Author data in the response body",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the author",
                    "type": "integer",
                    "minimum": 0
                },
                "fullName": {
                    "description": "First and last name of the author",
                    "type": "string"
                },
                "about": {
                    "description": "Short introduction to the author and their works.",
                    "type": "string"
                },
                "imageURL": {
                    "description": "URL for author's photo",
                    "type": "string",
                    "format": "uri"
                }
            }
        }, 

        "authorGetAll": {
            "id": "/authorGetAll",
            "title": "Author Get All",
            "description": "All authors data in the response body",
            "type": "array",
            "items": {"$ref": "#/definitions/authorGet"}
        }
    }
}