{
    "schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "review": {
            "id": "/review",
            "title": "Review",
            "description": "Data to create a new review",
            "type": "object",
            "properties": {
                "rating": {
                    "description": "Rating out of 10",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 10
                },
                "allText": {
                    "description": "Full body of review",
                    "type": "string"
                },
                "userID": {
                    "description": "ID of the user who wrote this review",
                    "type": "integer",
                    "minimum": 0
                },
                "bookID": {
                    "description": "ID of the book the review is about",
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": ["rating", "allText", "userID", "bookID"],
            "additionalProperties": false
        },
        
        "reviewUpdate": {
            "id": "/reviewUpdate",
            "title": "Review Update",
            "description": "Data to update an existing review",
            "type": "object",
            "properties": {
                "rating": {
                    "description": "Rating out of 10",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 10
                },
                "allText": {
                    "description": "Full body of review",
                    "type": "string"
                },
                "userID": {
                    "description": "ID of the user who wrote this review",
                    "type": "integer",
                    "minimum": 0
                },
                "bookID": {
                    "description": "ID of the book the review is about",
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        }, 

        "reviewCreated": {
            "id": "/reviewCreated",
            "title": "Review Created",
            "description": "Confirmation of a successful review creation",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the created review",
                    "type": "integer"
                },
                "created": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "reviewUpdated": {
            "id": "/reviewUpdated",
            "title": "Review Updated",
            "description": "Confirmation of a successful review update",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the updated review",
                    "type": "integer"
                },
                "updated": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "reviewDeleted": {
            "id": "/reviewDeleted",
            "title": "Review Deleted",
            "description": "Confirmation of a successful review deletion",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the deleted review",
                    "type": "integer"
                },
                "deleted": {
                    "description": "Boolean value indicating success",
                    "type": "boolean"
                }
            }
        }, 

        "reviewGet": {
            "id": "/reviewGet",
            "title": "Review Get",
            "description": "Review data in the response body",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the review",
                    "type": "integer",
                    "minimum": 0
                },
                "rating": {
                    "description": "Rating out of 10",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 10
                },
                "allText": {
                    "description": "Full body of review",
                    "type": "string"
                },
                "dateCreated": {
                    "description": "Date and time when the review was created",
                    "type": "string",
                    "format": "date-time"
                },
                "dateModified": {
                    "description": "Date and time when the review was last modified",
                    "type": "string",
                    "format": "date-time"
                },
                "userID": {
                    "description": "ID of the user who wrote this review",
                    "type": "integer",
                    "minimum": 0
                },
                "bookID": {
                    "description": "ID of the book the review is about",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }, 

        "reviewGetAll": {
            "id": "/reviewGetAll",
            "title": "Review Get All",
            "description": "All reviews data in the response body",
            "type": "array",
            "items": {"$ref": "#/definitions/reviewGet"}
        }
    }
}